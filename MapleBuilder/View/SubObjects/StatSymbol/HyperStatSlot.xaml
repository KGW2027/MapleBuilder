<UserControl x:Class="MapleBuilder.View.SubObjects.StatSymbol.HyperStatSlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="20" d:DesignWidth="180" Background="Transparent">
    <Grid>
        <Border Width="180" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"/> <!-- Shape Maker -->
        <Label x:Name="DisplayDamageInc" Content="99.99%" FontSize="12" FontWeight="Light" 
               VerticalAlignment="Center" HorizontalAlignment="Right" Padding="0, 0, 2, 0"/>
        <TextBox x:Name="InputLevel" Text="15" Width="34" Height="20" Margin="0, 0, 46, 0" HorizontalAlignment="Right"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0, 0, 0, 2" TextChanged="OnLevelTextChanged"/>
        <Label x:Name="DisplayLabel" Content="크리티컬 확률" FontSize="16" FontWeight="Regular"
               VerticalContentAlignment="Center" HorizontalAlignment="Right" Margin="0, 1, 82, 0" Padding="0, 0, 2, 0"/>
    </Grid>
</UserControl>
