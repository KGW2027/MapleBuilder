<UserControl x:Class="MapleBuilder.View.SubObjects.StatSymbol.AbilityOptionSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MapleBuilder.View.SubObjects.StatSymbol"
             mc:Ignorable="d"
             d:DesignHeight="48" d:DesignWidth="400" Background="Transparent">
    <Grid>
        <ComboBox x:Name="DisplayAbility" Width="318" Height="24" Margin="0, 0, 0, 0" 
                  Background="#222222" Text="잡옵" SelectionChanged="OnAbilitySelectionChanged" DropDownClosed="OnDropdownClosed"/>
        <Slider x:Name="ValueSlider"  Width="200" Height="18" Margin="0, 28, 0, 0" Minimum="1" Maximum="1" Value="1" ValueChanged="OnSliderChanged"/>
        <CheckBox x:Name="IsUpValue" Margin="332, 4, 0, 0" Content="이탈" Checked="OnCheckboxChecked" Unchecked="OnCheckboxUnchecked"/>
    </Grid>
</UserControl>
