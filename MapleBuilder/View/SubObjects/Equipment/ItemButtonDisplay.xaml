<UserControl x:Class="MapleBuilder.View.SubObjects.Equipment.ItemButtonDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MapleBuilder.View.SubObjects.Equipment"
             mc:Ignorable="d"
             d:DesignHeight="70" d:DesignWidth="537" Background="Transparent">
    <Grid>
        <Border Width="537" Height="70" BorderBrush="#CCCCCC" BorderThickness="1" Background="#101010"/>
        <Image x:Name="ItemThumbnail" Width="48" Height="48" Margin="11,11,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Polyline Points="0,31 0,0 62,0 62,31" Margin="4, 4, 0, 0" Stroke="White" StrokeThickness="2" x:Name="PotentialLine"/>
        <Polyline Points="0,31 0,62 62,62 62,31" Margin="4, 4, 0, 0" Stroke="Wheat" StrokeThickness="2" x:Name="AdditionalLine"/>
        <Label x:Name="ItemName" Content="가나다라 마바사아자 차카타파하" FontSize="24" FontWeight="Medium" Margin="72, 14, 0, 0" VerticalAlignment="Center"/>
        <StackPanel x:Name="SummaryPanel" Height="32" VerticalAlignment="Top" Margin="80, 8, 0, 0" Orientation="Horizontal"/>
    </Grid>
</UserControl>
