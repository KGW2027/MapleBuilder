<UserControl x:Class="MapleBuilder.View.SubObjects.Union.UnionCharacter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MapleBuilder.View.SubObjects"
             mc:Ignorable="d"
             d:DesignHeight="64" d:DesignWidth="344" Background="Transparent">
    <Grid>
        <Image x:Name="ctClassProfile" Width="64" Height="64" Margin="8, 0, 0, 0"/>
        <Border Width="64" Height="64" Margin="8, 0, 0, 0"
                BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="ctClassLabel" Content="메이플스토리 M" Margin="72, -6, 0, 0" VerticalAlignment="Top"/>
        <Label x:Name="ctRaiderEffect" Content="공격력/마력 0 증가" FontSize="12" FontWeight="Light" Margin="72, 16, 0, 0"/>
        <ComboBox x:Name="ctRaiderRankBox" Text="NONE" Width="76" Height="24" Margin="77, 40 ,0 ,0" SelectionChanged="OnRaiderRankChanged"/>
        
    </Grid>
</UserControl>
