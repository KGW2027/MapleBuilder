<UserControl x:Class="MapleBuilder.View.SubFrames.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="1280" Background="#515151" BorderBrush="#707070" MouseDown="OnMouseDown" BorderThickness="1">
    <Grid>
        <Label Name="ctProgramTitle" Content="Maple Builder v1.0" FontWeight="Medium" FontSize="20" Foreground="White" VerticalAlignment="Top"/>
        <Button Width="80" Height="24" Margin="600, 4, 0, 0" VerticalAlignment="Top" HorizontalAlignment="Left"
                Name="ctWzPathButton" Content="Wz경로 설정" Click="SettingWzPath"/>
        <Label Content="API Key" FontWeight="Medium" FontSize="20" Foreground="White" Margin="711, 0, 0, 0" VerticalAlignment="Top"/>
        <Button Width="56" Height="24" Margin="1220, 4, 0, 0" Content="적용" VerticalAlignment="Top"
                Name="ctAPIApplyButton" Click="ApplyApiKey"/>
        <TextBox Name="ctInputAPI" Width="427" Height="24" Margin="789, 4, 0, 0"/>
        
        <Button x:Name="ctDebugStatusTrace" Width="80" Height="24" Content="STATUE TRACE" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="320, 0, 0, 0" Visibility="Visible"
                Click="OnDebugStatusTrace"/>
    </Grid>
</UserControl>
