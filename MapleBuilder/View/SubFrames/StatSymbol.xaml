        <Label x:Name="ctArcaneForceDisplay" Content="ARC + 1,320" Margin="445, 140, 0, 0"/>
        <Label x:Name="ctArcaneStatDisplay" Content="INT + 13,200" Margin="445, 160, 0, 0"/>
        
